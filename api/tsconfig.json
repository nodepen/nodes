{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/",
        "src/types/*"
      ],
      "~/*": [
        "./*"
      ],
      "lib": [
        "./../lib/dist/index"
      ],
    }
  },
  "include": [
    "src/**/*"
  ]
}